{
  "name": "frontend-spa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "lint": "pnpm lint:js && pnpm lint:style && pnpm format:check",
    "lint:js": "eslint . --ext .ts,.tsx,.vue",
    "lint:style": "stylelint \"src/**/*.{css,vue}\"",
    "lint:style:fix": "stylelint \"src/**/*.{css,vue}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm build && playwright test",
    "generate:api": "openapi-typescript ${OPENAPI_SCHEMA_URL:-./openapi.json} --output src/types/generated/schema.d.ts",
    "check": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "pinia-plugin-persistedstate": "^3.2.1",
    "axios": "^1.6.7",
    "pinia": "^2.1.7",
    "vue": "^3.3.7",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/vue": "^7.0.0",
    "@types/jsdom": "^21.1.4",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/test-utils": "^2.4.5",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^22.1.0",
    "openapi-typescript": "^6.7.2",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.1",
    "postcss-preset-env": "^9.1.3",
    "prettier": "^3.0.3",
    "stylelint": "^16.23.0",
    "stylelint-config-recommended-vue": "1.5.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^6.0.3",
    "typescript": "~5.4.5",
    "vite": "^4.4.11",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "vue-tsc": "^2.1.6"
  }
}
