# Core database configuration
POSTGRES_DB=devstack
POSTGRES_USER=devstack
POSTGRES_PASSWORD=change-me

# Connection strings consumed by the backend and worker
DATABASE_URL=postgresql://devstack:change-me@postgres:5432/devstack
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=amqp://devstack:change-me@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Object storage
MINIO_ROOT_USER=devstack
MINIO_ROOT_PASSWORD=super-secret-password
MINIO_ACCESS_KEY=devstack
MINIO_SECRET_KEY=super-secret-password
MINIO_ENDPOINT=http://minio:9000
MINIO_REGION=us-east-1

# Observability / tracing
SENTRY_DSN=http://public:secret@sentry-relay:3000/1
SENTRY_RELAY_UPSTREAM_URL=https://sentry.io/
SENTRY_RELAY_PORT=3000

# Messaging
RABBITMQ_DEFAULT_USER=devstack
RABBITMQ_DEFAULT_PASS=change-me

# Frontend / backend tuning
BACKEND_UVICORN_WORKERS=4

# Grafana admin user (Grafana is protected behind nginx)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me
